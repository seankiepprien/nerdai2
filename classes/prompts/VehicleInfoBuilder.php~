<?php

namespace Nerd\Nerdai\Classes\prompts;

class VehicleInfoBuilder
{
    /**
     * Build the vehicle information prompt.
     *
     * @param string $vehicleInfo The vehicle information to include in the prompt.
     * @return string The built vehicle information prompt.
     */
    public function buildVehicleInfoPrompt($vehicleInfo): string
    {
        return $vehicleInfo ? "### VEHICLE INFORMATION: ### \n This is the vehicle information for you to create the description: \n" . $vehicleInfo . ". \n" : "";
    }
}
